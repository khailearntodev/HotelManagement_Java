<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import io.github.palexdev.materialfx.font.MFXFontIcon?>
<AnchorPane prefHeight="660.0" prefWidth="1060.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.Views.InvoiceController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="HÓA ĐƠN" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" />
    <MFXComboBox id="customNCombo2" fx:id="nCustomCombo" floatMode="DISABLED" promptText="Tất cả" prefWidth="153.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Hàng tháng"/>
                <String fx:value="Hàng tuần"/>
                <String fx:value="Hàng năm"/>
            </FXCollections>
        </items>
    </MFXComboBox>
    <!-- Bộ lọc -->
    <HBox spacing="5" prefHeight="26.0" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="75.0">
        <Label alignment="CENTER" contentDisplay="RIGHT" prefHeight="30.0" prefWidth="50.0" style="-fx-font-size: 14px;" text="Lọc" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="13.0" />
            </font>
        </Label>
        <ComboBox fx:id="entriesComboBox" prefHeight="26.0" prefWidth="94.0" style="-fx-margin: 0 10;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="10" />
                    <String fx:value="25" />
                    <String fx:value="50" />
                </FXCollections>
            </items>
        </ComboBox>
        <Region HBox.hgrow="ALWAYS" />
        <HBox spacing="1" alignment="CENTER_LEFT">
            <Label text="🔍" style="-fx-font-size: 14px;" />
            <TextField fx:id="filterTextField"
                       promptText="SEARCH BY EMAIL"
                       prefHeight="26.0" prefWidth="500.0"
                       style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: #ffffff; -fx-border-color: #cccccc;" />
        </HBox>

    </HBox>

    <!-- Bảng -->
    <TableView fx:id="invoiceTable" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="110">
        <columns>
            <TableColumn fx:id="invoiceIdColumn" prefWidth="100" text="ID" />
            <TableColumn fx:id="nameClientColumn" prefWidth="230" text="Tên khách hàng" />
            <TableColumn fx:id="emailColumn" prefWidth="190" text="Email" />
            <TableColumn fx:id="startDateColumn" prefWidth="100" text="Ngày tạo" />
            <TableColumn fx:id="invoiceAmountColumn" prefWidth="220" text="Trị giá" />
            <TableColumn fx:id="statusColumn" prefWidth="180" text="Trạng thái" />
        </columns>
    </TableView>
</AnchorPane>