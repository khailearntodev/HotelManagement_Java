<VBox fx:id="roomCardRoot" alignment="CENTER" prefHeight="300.0" prefWidth="200.0" minHeight="300.0" minWidth="200.0" style="-fx-border-color: purple; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.Views.RoomTypeCardController">
    <children>
        <ImageView fx:id="roomTypeImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="typeNameLabel" alignment="CENTER" prefHeight="17.0" prefWidth="198.0" text="Tên">
            <font>
                <Font name="System Bold" size="17.0" />
            </font>
        </Label>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="priceLabel" prefHeight="17.0" prefWidth="102.0" text="Giá">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <Label fx:id="quantityLabel" text="Số lượng">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </HBox>
        <HBox prefHeight="23.0" prefWidth="200.0">
            <children>
                <Label fx:id="priceTextField" minHeight="23.0" prefHeight="23.0" prefWidth="95.0">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Label>
                <Label fx:id="quantityTextField" minHeight="23.0" prefHeight="23.0" prefWidth="105.0" />
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </HBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <Label text="Mô tả">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <Label fx:id="descriptionTextArea" prefHeight="200.0" prefWidth="200.0" />
            </children>
        </VBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="17.0" prefWidth="99.0" text="Số khách tối đa">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <Label fx:id="maxOccupancyTextField" minHeight="23.0" prefHeight="23.0" prefWidth="108.0">
                    <HBox.margin>
                        <Insets left="22.0" />
                    </HBox.margin>
                </Label>
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </HBox>
