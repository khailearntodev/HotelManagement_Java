<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?> <?import javafx.scene.image.Image?>    <?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import org.kordamp.ikonli.javafx.StackedFontIcon?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.text.Font?>
<GridPane hgap="15" vgap="15" maxHeight="660" maxWidth="1060" minHeight="660" minWidth="1023.0" prefHeight="660" prefWidth="1040.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelmanagement.Views.ServiceManagementController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="600" minWidth="520" prefWidth="540.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="500" minWidth="460" prefWidth="480.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <VBox alignment="TOP_CENTER" spacing="15" GridPane.columnIndex="0">
        <BorderPane prefHeight="50" prefWidth="500" style="-fx-background-color: #FFB1FFDD; -fx-background-radius: 10;">
            <padding>
                <Insets left="15" right="15" />
            </padding>
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
            <center>

                <MFXTextField fx:id="filterTextField" floatMode="ABOVE" minHeight="-Infinity" prefHeight="35.0" prefWidth="500.0" promptText="Tìm kiếm dịch vụ">
                    <leadingIcon>
                        <StackedFontIcon iconSize="16">
                            <FontIcon iconLiteral="fa-search" wrappingWidth="18.142857551574707" StackedFontIcon.iconSize="0.7">
                                <font>
                                    <Font size="14.0" />
                                </font></FontIcon>
                        </StackedFontIcon>
                    </leadingIcon>
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin>
                </MFXTextField>
            </center>
        </BorderPane>
        <TableView fx:id="serviceTableView" prefHeight="560.0" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
            <columns>
                <TableColumn fx:id="colMaDichVu" prefWidth="120" text="Mã dịch vụ" />
                <TableColumn fx:id="colTenDichVu" prefWidth="220" text="Tên dịch vụ" />
                <TableColumn fx:id="colGiaDichVu" prefWidth="130" text="Giá dịch vụ" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <BorderPane style="-fx-border-color: #B0B0B0; -fx-border-width: 1; -fx-border-radius: 10;" GridPane.columnIndex="1">
        <padding>
            <Insets bottom="5" left="5" right="5" top="5" />
        </padding>
        <center>
            <VBox alignment="TOP_CENTER" spacing="10">
                <StackPane prefHeight="50.0" style="-fx-background-color: #2563EB; -fx-background-radius: 8 8 0 0;">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: white;" text="QUẢN LÝ DỊCH VỤ" />
                </StackPane>
                <TabPane fx:id="serviceTabPane" VBox.vgrow="ALWAYS"
                         style="-fx-tab-min-width: 120px; -fx-tab-max-width: 120px; -fx-tab-min-height: 35px; -fx-tab-max-height: 35px;
                -fx-background-color: #F0F2F5; -fx-tab-border-color: #D0D0D0; -fx-tab-border-width: 0 0 2 0;
                -fx-tab-selected-background-color: white; -fx-tab-selected-text-fill: #2563EB;
                -fx-tab-unselected-text-fill: #555555; -fx-tab-hover-background-color: #E0E2E5;
                -fx-header-background-color: #F0F2F5; -fx-open-tab-animation: NONE; -fx-close-tab-animation: NONE;">
                    <tabs>
                        <!-- Tab Sửa dịch vụ -->
                        <Tab closable="false">
                            <graphic>
                                <Label text="Sửa dịch vụ" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2563EB;" />
                            </graphic>
                            <content>
                                <VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #F8F8F8;">
                                    <padding>
                                        <Insets bottom="20" left="20" right="20" top="20" />
                                    </padding>
                                    <ImageView fx:id="editServiceImageView" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                                        <VBox.margin>
                                            <Insets bottom="5.0" />
                                        </VBox.margin>
                                    </ImageView>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <TextField fx:id="imageLinkEditTextField" HBox.hgrow="ALWAYS" promptText="Link ảnh" style="-fx-font-size: 16;" />
                                        <Button fx:id="findImageEditButton" onAction="#onFindImageEdit" style="-fx-background-color: #701c1c; -fx-text-fill: white; -fx-font-size: 15;" text="Xem ảnh" />
                                    </HBox>
                                    <VBox spacing="5" VBox.vgrow="NEVER">
                                        <Label style="-fx-text-fill: #555555; -fx-font-size: 16;" text="Mã dịch vụ" />
                                        <TextField fx:id="maDichVuEditTextField" editable="false" style="-fx-background-color: #F1E6E6; -fx-background-radius: 5; -fx-font-size: 16;" />
                                    </VBox>
                                    <VBox spacing="5">
                                        <Label style="-fx-text-fill: #555555; -fx-font-size: 16;" text="Tên dịch vụ" />
                                        <TextField fx:id="tenDichVuEditTextField" style="-fx-background-color: #FFFFFF; -fx-border-color: #D0D0D0; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 16;" />
                                    </VBox>
                                    <VBox spacing="5">
                                        <Label style="-fx-text-fill: #555555; -fx-font-size: 16;" text="Giá dịch vụ" />
                                        <TextField fx:id="giaDichVuEditTextField" style="-fx-background-color: #FFFFFF; -fx-border-color: #D0D0D0; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 16;" />
                                    </VBox>
                                    <Button fx:id="updateServiceButton" onAction="#onUpdateService" maxWidth="Infinity" prefHeight="40.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 5;" text="Cập nhật">
                                        <VBox.margin>
                                            <Insets top="10" />
                                        </VBox.margin>
                                    </Button>
                                    <Button fx:id="cancelEditButton" onAction="#onCancelEdit" maxWidth="Infinity" prefHeight="40.0" style="-fx-background-color: maroon; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 5;" text="Hủy" />
                                </VBox>
                            </content>
                        </Tab>

                        <!-- Tab Thêm dịch vụ -->
                        <Tab closable="false">
                            <graphic>
                                <Label text="Thêm dịch vụ" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2563EB;" />
                            </graphic>
                            <content>
                                <VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #F8F8F8;">
                                    <padding>
                                        <Insets bottom="20" left="20" right="20" top="20" />
                                    </padding>
                                    <ImageView fx:id="addServiceImageView" fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                                        <VBox.margin>
                                            <Insets bottom="5.0" />
                                        </VBox.margin>
                                    </ImageView>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <TextField fx:id="imageLinkAddTextField" HBox.hgrow="ALWAYS" promptText="Link ảnh" style="-fx-font-size: 16;" />
                                        <Button fx:id="findImageAddButton" onAction="#onFindImageAdd" style="-fx-background-color: #701c1c; -fx-text-fill: white; -fx-font-size: 15;" text="Xem ảnh" />
                                    </HBox>
                                    <VBox spacing="5">
                                        <Label style="-fx-text-fill: #555555; -fx-font-size: 16;" text="Tên dịch vụ" />
                                        <TextField fx:id="tenDichVuAddTextField" style="-fx-background-color: #FFFFFF; -fx-border-color: #D0D0D0; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 16;" />
                                    </VBox>
                                    <VBox spacing="5">
                                        <Label style="-fx-text-fill: #555555; -fx-font-size: 16;" text="Giá dịch vụ" />
                                        <TextField fx:id="giaDichVuAddTextField" style="-fx-background-color: #FFFFFF; -fx-border-color: #D0D0D0; -fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 16;" />
                                    </VBox>
                                    <Button fx:id="addServiceButton" onAction="#onAddService" maxWidth="Infinity" prefHeight="40.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 5;" text="Thêm dịch vụ">
                                        <VBox.margin>
                                            <Insets top="10" />
                                        </VBox.margin>
                                    </Button>
                                    <Button fx:id="cancelAddButton" onAction="#onCancelAdd" maxWidth="Infinity" prefHeight="40.0" style="-fx-background-color: maroon; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 5;" text="Hủy" />
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>

            </VBox>
        </center>
    </BorderPane>
</GridPane>